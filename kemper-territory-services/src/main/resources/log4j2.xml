<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Gelf name="GELF"
              host="udp:graylog01.int.comp.kemper.innoveo-skye.net"
              port="12201"
              version="1.1"
              extractStackTrace="true"
              filterStackTrace="true"
              mdcProfiling="true"
              includeFullMdc="true"
              maximumMessageSize="8192"
              originHost="%host{fqdn}">

            <!--Field name="deployment_id" pattern="local" /-->
            <Field name="application" literal="api2query" />
            <Field name="loggerName" pattern="%c" />
            <Field name="logLevel" pattern="%level" />
        </Gelf>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.mongodb.driver" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>


